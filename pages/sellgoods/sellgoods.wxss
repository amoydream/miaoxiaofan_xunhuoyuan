/* pages/sellgoods/sellgoods.wxss */
.container{
    height: 100%;
    background: #efefef;
}

.head{
    width: 750rpx;
    height: 100rpx;
    box-sizing: border-box;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    background: white;
    margin-bottom: 10rpx;
}
.head>view{
    width:230rpx;
    height:76rpx;
    line-height: 76rpx;
    font-size: 28rpx;
    color: #333333;
    border:2rpx solid rgba(212, 166, 96, 1);
    box-sizing: border-box;
}

.head>view:nth-child(1){
    border-radius:8rpx 0 0 8rpx;
}

.head>view:nth-child(2){
    border-radius:0 8rpx 8rpx 0;
}


.head>view.active{
    background:#D4A660;
    color: white;
}

.bgView{
  padding: 40px;
  height: 10px;
  width: 10px;
  margin-top: 20px;
  margin-left: 50px;
  background: blue
}

.deviceStatus{
    background: white;
}
scroll-view {
    width: 100%;
    white-space: nowrap;
}

.item-content {
    width: 30%;
    display: inline-block;
    text-align: center;
    font-size: 30rpx;
}
.title{
    height: 120rpx;
    line-height: 120rpx;
    
}

.sellgoodsOptionsAll{
    color: #D4A660;
    border-bottom: 4rpx solid #D4A660;
    padding: 20rpx;
    box-sizing: border-box;
    text-align: center;
}
.sellgoodsList{
    margin-top: 30rpx;
    height: calc(100% - 120rpx);
    overflow: scroll;
}
.main .no_data{
    width: 100%;
    text-align: center;
}
.main .no_data image{
    width: 200rpx;
    height: 200rpx;
    margin-top: 200rpx;
}

.sellgoods_item{
    width: 690rpx;
    margin: 0 auto;
    padding: 10rpx 20rpx;
    background: white;
    font-size: 30rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
}
.sellgoods_item .sellgoods_number{
    line-height: 80rpx;
}

.sellgoods_item .sellgoods_number image{
    width:41rpx;
    height:44rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.sellgoods_item .sellgoods_number .details{
    float: right;
    padding-top: 15rpx;
    width:44rpx;
    height:44rpx;
}

.sellgoods_item .sellgoods_main{
    border-top: 1rpx solid #efefef;
    height: 120rpx;
    border-bottom: 1rpx solid #efefef;
    padding: 10rpx 0;
    box-sizing: border-box;
    font-size: 30rpx;
}

.sellgoods_item .sellgoods_main>view{
    width: 50%;
    float: left;
}

.sellgoods_item .sellgoods_main>view text{
    font-size:26rpx;
    color:rgba(153,153,153,1);
}

.sellgoods_item .address{
    height: 60rpx;
    font-size:30rpx;
    color:rgba(153,153,153,1);
    line-height: 60rpx;
}

.sellgoods_item .address image{
    width: 42rpx;
    height: 45rpx;
    vertical-align: middle;
}

.title{
    display: flex;
    font-size: 28rpx;
    color: #333333;
    height: 84rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    background: white;
}
.title>view{
    line-height: 80rpx;
    flex: 1;
    text-align: center;
}

.title>view.active{
    color: #D4A660;
    border-bottom: 4rpx solid #D4A660;
}

.main{
    height: calc(100% - 200rpx);
    box-sizing: border-box;
}

.main .main-item{
    height: 230rpx;
    padding: 0 30rpx;
    margin-bottom: 10rpx;
    background: white;
}
.main .main-item .main-item-title{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.main .main-item .main-item-title image{
    width: 37rpx;
    height: 37rpx;
}

.main .main-item .main-item-box{
    height: 120rpx;
    display: flex;
}
.main .main-item .main-item-box>view{
    flex: 1;
    font-size:26rpx;
    color:rgba(102,102,102,1);
}
.main .main-item .main-item-box>view:nth-child(2){
    border-left: 1rpx solid #EFEFEF;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.main .main-item .main-item-box>view>view{
    line-height: 60rpx;
}

.main .main-item .main-item-box>view>view text{
    color: #595CA1;
}

.main-item-box-left>view{
    width: 308rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

.mainBottom_loadMore,.mainBottom_refresh{
    text-align: center;
    line-height: 40rpx;
    font-size: 28rpx;
}