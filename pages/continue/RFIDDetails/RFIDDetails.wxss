page{
    background: #f2f2f2;
}

.container{
    height:100%;
}

.goods-main{
    height: calc(100% - 90rpx);
    overflow: scroll;
}
.goods-main-item{
    height:160rpx;
    box-shadow:0 2rpx 0 0 rgba(35,24,21,0.1);
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #333333;
    background: white;
}

.goods-main-item image{
    width: 130rpx;
    height: 130rpx;
}
.goods-main-item .goods-main-info{
    width: 400rpx;
    margin-left: 20rpx;
}

.goods-main-item .goods-main-info>view{
    line-height: 60rpx;
}

.goods-main-item .goods-number{
    width: 175rpx;
    text-align: right;
}

.goods-main-item .goods-number text{
    color: #595CA1;
}
.btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width:100%;
    height:88rpx;
    background:rgba(96,147,249,1);
    box-shadow:0 2px 0 0 rgba(35,24,21,0.1);
    color: white;
    line-height: 88rpx;
    text-align: center;
    font-size:30rpx;
}