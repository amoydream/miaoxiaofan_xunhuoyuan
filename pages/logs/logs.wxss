page{
  background: #f8f8f8;
}
.container{
    padding-top: 150rpx;
}
.head{
  margin: 0rpx auto;
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 50rpx;
}
.itemView{
  width: 60%;
  height: 100rpx;
  margin: 0 auto;
  font-size: 32rpx;
}
.itemView input{
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  padding-left: 10px;
}
.viewLogin{
  margin: 30rpx auto;
  width: 40%;
}
.viewLogin button{
  font-size: 26rpx;
  background: #595CA1;
  color: white;
}

.code{
  position: relative;
  height: 100rpx;
  margin: 0 auto;
  width: 80%;
}
.code input{
  position: absolute;
  left: 80rpx;
  font-size: 32rpx;
  height: 60rpx;
  border-bottom: 1px solid #ccc;
  padding-left: 10px;
  width: 191rpx;
}
.code canvas{
  position: absolute;
  top: 0;
  right: 10rpx;
  width: 200rpx;
  height: 100rpx;
}