/* pages/main/main.wxss */
.container{
  height: 100%;
  background: #efefef;
}

.mainMsg_top{
  padding: 50rpx 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: white;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.BtnOrder image{
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
  vertical-align: middle;
}

.mainMsg_top .text{
  font-size: 30rpx;
}

.mainMsg{
  padding: 50rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  background: white;
  padding-bottom: 0;
  padding-right: 0;
}
.mainMsgDetails{
  display: flex;
  margin-right: 156rpx;
  margin-bottom: 65rpx
}
.mainMsgDetails:nth-child(even){
  margin-right: 0;
}
.detailImg{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx
}
.detailImg image{
  width: 100%;
  height: 100%;
  margin-top: 10rpx;
}
.detailMsg view:nth-of-type(2){
  font-size: 20px
}
.detailMsg view:nth-of-type(1){
  color: #98979c;
  font-size: 30rpx
}
